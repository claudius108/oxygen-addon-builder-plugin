<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

	<id>initialize-framework</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<files>
		<file>
			<source>${basedir}/templates/xquery/framework.xq</source>
			<outputDirectory>/</outputDirectory>
		</file>
		<file>
			<source>${basedir}/templates/xquery/initializeFramework.xq</source>
			<outputDirectory>target</outputDirectory>
		</file>
		<file>
			<source>${basedir}/templates/addon/addon.xml</source>
			<outputDirectory>target</outputDirectory>
		</file>
	</files>

	<fileSets>
		<fileSet>
			<directory>${basedir}/templates/css</directory>
			<outputDirectory>resources/css</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${basedir}/templates/java</directory>
			<outputDirectory>target/templates/java</outputDirectory>
		</fileSet>
	</fileSets>

</assembly>
