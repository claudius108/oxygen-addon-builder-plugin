<project name="Oxygen Framework Builder">

	<property name="oxygenAddonBuilder.frameworkDir" value="${oxygenAddonBuilder.frameworksDir}${file.separator}${oxygenAddonBuilder.frameworkId}${file.separator}" />
	<property name="oxygenAddonBuilder.pluginTemplatesDir" value="${oxygenAddonBuilder.pluginInstallDir}${file.separator}templates${file.separator}" />
	<property name="oxygenAddonBuilder.frameworkTargetDir" value="${oxygenAddonBuilder.frameworkDir}target${file.separator}" />
	<property name="oxygenAddonBuilder.frameworkArchivePath" value="${oxygenAddonBuilder.frameworkTargetDir}${oxygenAddonBuilder.frameworkId}.jar" />
	<property name="oxygenAddonBuilder.path-to-oxygenAuthor.jar" value="${oxygenAddonBuilder.frameworksDir}${file.separator}..${file.separator}lib${file.separator}oxygenAuthor.jar" />
	<property name="oxygenAddonBuilder.path-to-addon-builder-plugin.jar" value="${oxygenAddonBuilder.frameworkDir}java${file.separator}addon-builder-plugin.jar" />
	<property name="oxygenAddonBuilder.path-to-log4j.jar" value="${oxygenAddonBuilder.frameworksDir}/../lib/log4j.jar" />
	<property name="oxygenAddonBuilder.path-to-commons-io.jar" value="${oxygenAddonBuilder.frameworksDir}/../lib/commons-io-1.3.1.jar" />
	<tstamp>
		<format property="oxygenAddonBuilder.timestamp" pattern="MMddhhmm" locale="en,GB" />
	</tstamp>	

	<echoproperties prefix="oxygenAddonBuilder." />

	<target name="build-framework">
		
		<javac srcdir="${oxygenAddonBuilder.frameworkTargetDir}${oxygenAddonBuilder.frameworkId}" source="${ant.java.version}" target="${ant.java.version}" classpath="${oxygenAddonBuilder.path-to-addon-builder-plugin.jar};${oxygenAddonBuilder.path-to-oxygenAuthor.jar}" includeantruntime="false" fork="true" debug="true" />
		<delete file="${oxygenAddonBuilder.frameworkArchivePath}" />
		<jar destfile="${oxygenAddonBuilder.frameworkDir}java${file.separator}framework.jar" basedir="${oxygenAddonBuilder.frameworkTargetDir}" excludes="**/*.java" />
		<jar destfile="${oxygenAddonBuilder.frameworkArchivePath}" basedir="${oxygenAddonBuilder.frameworksDir}" includes="${oxygenAddonBuilder.frameworkId}/**/*.*" excludes="${oxygenAddonBuilder.frameworkId}/target/" />
		<signjar jar="${oxygenAddonBuilder.frameworkArchivePath}" keystore="${oxygenAddonBuilder.pluginInstallDir}${file.separator}cryptographic-materials${file.separator}oxygen-addon-builder.jks" alias="oxygen-addon-builder" storepass="oxygen" keypass="oxygen" />
		<echo>Delete selectively the content of '${oxygenAddonBuilder.frameworkTargetDir}' directory...</echo>
		<delete includeemptydirs="true">
			<fileset dir="${oxygenAddonBuilder.frameworkTargetDir}">
				<include name="*/" />
				<exclude name="${oxygenAddonBuilder.frameworkId}.jar" />
			</fileset>
		</delete>
		<copy todir="${oxygenAddonBuilder.frameworkTargetDir}" filtering="true">
			<fileset dir="${oxygenAddonBuilder.frameworkDir}" includes="addon.xml" />
			<filterchain>
				<expandproperties />
			</filterchain>
		</copy>

	</target>

</project>
