<project name="Oxygen Framework Builder">

	<property name="frameworkDir" value="${frameworksDir}${file.separator}${frameworkId}" />
	<property name="pluginTemplatesDir" value="${pluginInstallDir}${file.separator}templates${file.separator}" />
	<property name="frameworkTargetDir" value="${frameworkDir}${file.separator}target${file.separator}" />
	<property name="frameworkArchivePath" value="${frameworkTargetDir}${frameworkId}.jar" />

	<target name="build-framework">

		<copy file="${pluginInstallDir}${file.separator}lib${file.separator}addon-builder.jar" todir="${frameworkDir}${file.separator}java" />
		<copy file="${pluginTemplatesDir}css${file.separator}addon.css" todir="${frameworkDir}${file.separator}resources${file.separator}css" />
		<copy file="${pluginTemplatesDir}css${file.separator}kuberam-addon-templates.css" todir="${frameworkDir}${file.separator}resources${file.separator}css" />
		<copy todir="${frameworkDir}" filtering="true">
			<fileset dir="${pluginTemplatesDir}addon" includes="addon.xml">
				<present targetdir="${frameworkDir}" present="srconly" />
			</fileset>
			<filterchain>
				<expandproperties />
			</filterchain>
		</copy>
		<copy todir="${frameworkDir}">
			<fileset dir="${pluginTemplatesDir}xquery" includes="addon.xq">
				<present targetdir="${frameworkDir}" present="srconly" />
			</fileset>
		</copy>
		<copy todir="${frameworkTargetDir}${frameworkId}" filtering="true">
			<fileset dir="${pluginTemplatesDir}java" />
			<filterchain>
				<expandproperties />
			</filterchain>
		</copy>
		<javac srcdir="${frameworkTargetDir}${frameworkId}" source="1.7" target="1.7" classpath="${frameworkDir}${file.separator}java${file.separator}addon-builder.jar;${frameworksDir}${file.separator}..${file.separator}lib${file.separator}oxygenAuthor.jar" includeantruntime="false" debug="true" />
		<delete file="${frameworkArchivePath}" />
		<jar destfile="${frameworkDir}${file.separator}java${file.separator}framework.jar" basedir="${frameworkTargetDir}" excludes="**/*.java" />
		<jar destfile="${frameworkArchivePath}" basedir="${frameworkDir}" excludes="target/" />
		<signjar jar="${frameworkArchivePath}" keystore="${pluginInstallDir}${file.separator}cryptographic-materials${file.separator}dlri.jks" alias="dlri" storepass="dlrisigner" keypass="dlrisigner" />
		<delete includeemptydirs="true">
			<fileset dir="${frameworkTargetDir}">
				<include name="*/" />
				<exclude name="${frameworkId}.jar" />
			</fileset>
		</delete>
		<copy todir="${frameworkTargetDir}" filtering="true">
			<fileset dir="${frameworkDir}" includes="addon.xml" />
			<filterchain>
				<expandproperties />
			</filterchain>
		</copy>

	</target>

</project>
