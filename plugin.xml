<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plugin SYSTEM "../plugin.dtd">
<plugin
    id="ro.kuberam.oxygen.addonBuilder"
    name="Addon Builder"
    description="Build an addon mainly based upon a XQuery script"
    version="${project.version}.${timestamp}"
    vendor="kuberam.ro"
    class="ro.kuberam.oxygen.addonBuilder.AddonBuilderPlugin"
    classLoaderType="preferReferencedResources">
    <runtime>
        <library name="lib/addon-builder.jar" />
        <library name="${oxygenInstallDir}/jre/lib/ext/jfxrt.jar" />
    </runtime>
    <extension type="WorkspaceAccess" class="ro.kuberam.oxygen.addonBuilder.AddonBuilderPluginExtension" />
    <extension type="URLHandler" class="ro.kuberam.oxygen.addonBuilder.urlSchemes.CustomProtocolURLHandlerExtension"/>
    <toolbar id="AddonBuilderToolbar" initialSide="NORTH" initialRow="1"/>
</plugin>
